                <form method="post" class="form mt-4">

                    <div class="form-field">
                        <label for="nameInput" class="form-label">Imię i nazwisko</label>
                        <input type="text" name="name" class="form-control" id="nameInput" placeholder="John Doe">
                    </div>

                    <div class="form-field">
                        <label for="emailInput" class="form-label">Adres email</label>
                        <input type="email" name="email" class="form-control" id="emailInput"
                            placeholder="john.doe@example.com">
                    </div>

                    <div class="form-field">
                        <label for="contentsInput" class="form-label">Treść</label>
                        <textarea class="form-control" name="contents" id="contentsInput"
                            placeholder="Treść zapytania"></textarea>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Wyślij</button>
                    </div>

