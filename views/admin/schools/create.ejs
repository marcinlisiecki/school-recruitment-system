<%- include('../../_partials/header') %>
<div class="page-container container my-3">
    <h2>Utwórz szkołe</h2>

    <form method="post" class="form">
        
        <div class="form-field">
            <label for="nameInput" class="form-label">Nazwa szkoły</label>
            <input type="text" name="name" class="form-control" id="nameInput" placeholder="Szkoła podstawowa nr. 54">
        </div>

        <div class="form-field">
            <label for="addressInput" class="form-label">Ulica i numer</label>
            <input type="text" name="address" class="form-control" id="addressInput" placeholder="Mazowiecka 13">
        </div>

        <div class="form-field">
            <label for="cityInput" class="form-label">Miasto</label>
            <input type="text" name="city" class="form-control" id="cityInput" placeholder="Szczecin">
        </div>

        <div class="form-field">
            <label for="zipCodeInput" class="form-label">Kod pocztowy</label>
            <input type="text" name="zipCode" class="form-control" id="zipCodeInput" placeholder="70-526">
        </div>

        <div class="form-field">
            <label for="emailInput" class="form-label">Adres email</label>
            <input type="email" name="email" class="form-control" id="emailInput" placeholder="john.doe@example.com">
        </div>

        <div class="form-field">
            <label for="phoneInput" class="form-label">Numer telefonu</label>
            <input type="text" name="phone" class="form-control" id="phoneInput" placeholder="123456789">
        </div>

        <div class="form-field">
            <label for="descriptionInput" class="form-label">Opis</label>
            <input type="textarea" name="description" class="form-control" id="descriptionInput" placeholder="Twój opis">
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Zapisz</button>
        </div>

    </form>

</div>
<%- include('../../_partials/footer') %>