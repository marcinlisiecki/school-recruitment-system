<%- include('../_partials/header') %>
<div class="container my-3">
    <h2 class="mb-3">Ogłoszenia</h2>

    <% announcement.forEach((announcement) => { %>

        <article class="card shadow-sm mt-3">
            <div class="card-body p-4">
                <h3 class="card-title h4"><a href="/announcements/<%= announcement._id %>%>"><%= announcement.title %></a></h3>
                <h6 class="card-subtitle mb-2 text-muted">Opublikowano kiedyś</h6>
                <p class="card-text"><%- announcement.content %></p>
            </div>
        </article>

    <% }); %>

</div>
<%- include('../_partials/footer') %>