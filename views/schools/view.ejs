<%- include('../_partials/header') %>
<div class="container my-3">
    <h2 class="mb-3"><%= school.name %></h2>

    <div class="details">
        <div class="detail">
            <div class="detail-label">
                Adres
            </div>
            <div class="detail-content">
                <%= school.address %>,&nbsp;<%= school.zipCode %>&nbsp;<%= school.city %>
            </div>
        </div>
        <div class="detail">
            <div class="detail-label">
                Adres email
            </div>
            <div class="detail-content">
                <%= school.email %>
            </div>
        </div>
        <div class="detail">
            <div class="detail-label">
                Numer telefonu
            </div>
            <div class="detail-content">
                <%= school.phone %>
            </div>
        </div>
        <div class="detail">
            <div class="detail-label">
                Opis
            </div>
            <div class="detail-content">
                <%= school.description %>
            </div>
        </div>
    </div>

    <h3 class="mb-3 mt-5">Profile</h3>

    <table class="table">
        <thead>
        <tr>
            <th>Profil</th>
            <th>Opis</th>
            <th>Liczba dostÄ™pnych miejsc</th>
            <th>Kryteria punktacji</th>
        </tr>
        </thead>
        <tbody>
        <% school.profiles.forEach((profile) => { %>
            <tr>
                <td>
                    <%= profile.name %>
                </td>
                <td>
                    <div>
                        <div><%= profile.description %></div>
                    </div>
                </td>
                <td>
                    <div>
                        <div><%= profile.availablePlaces %></div>
                    </div>
                </td>
                <td class="small">
                    <% let criteria = profile.criteria ? profile.criteria : [] %>
                    <%= criteria.map(({ name, multiplier }) => `${name} x ${multiplier}`).join(', ') %>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>
</div>
<%- include('../_partials/footer') %>